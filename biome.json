{
  "$schema": "https://biomejs.dev/schemas/1.2.0/schema.json",
  "files": {
    "ignore": [".devcontainer", "dist/"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true
  }
}
